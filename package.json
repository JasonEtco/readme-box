{
  "name": "readme-box",
  "author": "Jason Etcovitch",
  "description": "Lil' helper for replacing a section of the contents of a README.",
  "version": "0.2.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JasonEtco/readme-box"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/readme-box.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@octokit/request": "^5.6.0"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "nock": "^13.1.0",
    "pretty-quick": "^3.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  }
}
